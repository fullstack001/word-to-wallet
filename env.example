# Basic runtime
NODE_ENV=development
PORT=3065

# Backend connectivity
NEXT_PUBLIC_API_URL=http://localhost:5000/api
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:5000
NEXT_PUBLIC_SITE_URL=http://localhost:3065

# Cross-app URLs
NEXT_PUBLIC_BOOK_LANDING_URL=http://localhost:3001
NEXT_PUBLIC_LANDINGPAGE_VIEW_URL=http://localhost:3001
NEXT_PUBLIC_READER_URL=http://localhost:3002

# Payments (publishable keys only)
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_your_stripe_publishable_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Contentful CMS
CONTENTFUL_SPACE_ID=your_contentful_space_id_here
CONTENTFUL_ACCESS_TOKEN=your_contentful_access_token_here

# Localization
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,es,fr,ko,se

# File upload limits
NEXT_PUBLIC_MAX_FILE_SIZE=52428800
NEXT_PUBLIC_ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,epub

# Debugging and analytics
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_ENABLE_DEV_TOOLS=true
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
