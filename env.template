# Frontend Environment Configuration Template
# Copy this file to .env.local for local development
# DO NOT commit .env.local to version control

# ===========================================
# API Configuration
# ===========================================
# Backend API URL - Update this to match your backend server
NEXT_PUBLIC_API_URL=http://localhost:5000/api
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:5000

# ===========================================
# OpenAI Configuration (Frontend)
# ===========================================
# OpenAI API Key for direct frontend content generation
# Get this from https://platform.openai.com/api-keys
# IMPORTANT: This will be exposed to the client, so use a restricted key
NEXT_PUBLIC_OPENAI_API_KEY=sk-your-openai-api-key-here

# ===========================================
# Payment Configuration (Stripe)
# ===========================================
# Stripe Public Key - Get this from your Stripe Dashboard
# For testing, use the publishable key that starts with 'pk_test_'
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# ===========================================
# Content Management (Contentful)
# ===========================================
# Contentful Space ID and Access Token
# Get these from your Contentful account
CONTENTFUL_SPACE_ID=your_contentful_space_id_here
CONTENTFUL_ACCESS_TOKEN=your_contentful_access_token_here

# ===========================================
# Application Configuration
# ===========================================
# Environment (development, production, test)
NODE_ENV=development

# ===========================================
# Frontend Server Configuration
# ===========================================
# Port for the Next.js development server (matches package.json)
PORT=3065

# ===========================================
# Internationalization
# ===========================================
# Default locale for the application
NEXT_PUBLIC_DEFAULT_LOCALE=en

# Supported locales (comma-separated)
NEXT_PUBLIC_SUPPORTED_LOCALES=en,es,fr,ko,se

# ===========================================
# File Upload Configuration
# ===========================================
# Maximum file size for uploads (in bytes)
NEXT_PUBLIC_MAX_FILE_SIZE=52428800

# Allowed file types for uploads
NEXT_PUBLIC_ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,epub

# ===========================================
# Security Configuration
# ===========================================
# Enable/disable debug mode
NEXT_PUBLIC_DEBUG_MODE=true

# ===========================================
# Analytics (Optional)
# ===========================================
# Google Analytics ID (if using Google Analytics)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ===========================================
# Development Tools
# ===========================================
# Enable/disable development tools
NEXT_PUBLIC_ENABLE_DEV_TOOLS=true
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key_here
